<body>
    <div class="container">
        <!-- Welcome Screen -->
        <div id="welcomeScreen">
            <h1>Hello, Kiran ‚ù§Ô∏è</h1>
            <div class="heart">üíï</div>
            <p>Before I ask you something very special, you need to prove you're really you...</p>
            <p>Answer these questions about yourself to verify your identity!</p>
            <p><small>You'll have 10 seconds per question. Don't worry, you've got this! üòä</small></p>
            <button onclick="startQuiz()">I'm Ready!</button>
        </div>

        <!-- Quiz Screen -->
        <div id="quizScreen" class="hidden">
            <div class="progress">Question <span id="currentQ">1</span> of <span id="totalQ">5</span></div>
            <div class="timer" id="timer">10</div>
            <div class="question-container">
                <div class="question" id="question"></div>
                <div class="options" id="options"></div>
            </div>
            <button id="submitAnswer" onclick="submitAnswer()">Submit Answer</button>
        </div>

        <!-- Valentine Question -->
        <div id="valentineScreen" class="hidden">
            <h1>You passed! üéâ</h1>
            <div class="heart">‚ù§Ô∏è</div>
            <h2>Kiran, will you be my Valentine?</h2>
            <div class="valentine-buttons">
                <button onclick="handleYes()">Yes! üíñ</button>
                <button id="noButton" onclick="handleNo()">No</button>
            </div>
            <div class="witty-message hidden" id="wittyMessage"></div>
        </div>

        <!-- Success Screen -->
        <div id="successScreen" class="hidden">
            <h1>Congratulations! üéä</h1>
            <div class="heart">üíùüíïüíñ</div>
            <h2>I can't wait to celebrate with you!</h2>
            <div class="final-message">
                <p><strong>Valentine's Day Plans:</strong></p>
                <p id="instructions">[Your special Valentine's Day instructions will go here!]</p>
            </div>
        </div>
    </div>

    <script>
        const questions = [
            {
                question: "What is your favorite animal?",
                options: ["Lion", "Elephant", "Tiger", "Penguin"],
                correct: 1
            },
            {
                question: "What is your favorite pet?",
                options: ["Cat", "Dog", "Rabbit", "Bird"],
                correct: 1
            },
            {
                question: "What animal has been your recent obsession?",
                options: ["Highland cows", "Alpacas", "Capybaras", "Red pandas"],
                correct: 0
            },
            {
                question: "What is your dream job?",
                options: ["Doctor", "Teacher", "Lawyer", "Engineer"],
                correct: 2
            },
            {
                question: "If you started your own business, what would it be related to?",
                options: ["Coaching", "Photography", "Baking", "Fashion"],
                correct: 0
            }
        ];

        let currentQuestion = 0;
        let selectedAnswer = null;
        let timer;
        let timeLeft = 10;
        let score = 0;

        const wittyMessages = [
            "Oops! Try clicking the other button instead! üòä",
            "I think you meant to click 'Yes'... üíï",
            "The 'No' button seems to be malfunctioning! Try 'Yes'! üòâ",
            "My heart can't take this! Click 'Yes' please! üíî",
            "Wrong button! The 'Yes' button is calling your name! ‚ú®"
        ];
        let wittyMessageIndex = 0;

        function startQuiz() {
            document.getElementById('welcomeScreen').classList.add('hidden');
            document.getElementById('quizScreen').classList.remove('hidden');
            document.getElementById('totalQ').textContent = questions.length;
            loadQuestion();
        }

        function loadQuestion() {
            if (currentQuestion >= questions.length) {
                showValentineQuestion();
                return;
            }

            const q = questions[currentQuestion];
            document.getElementById('currentQ').textContent = currentQuestion + 1;
            document.getElementById('question').textContent = q.question;
            
            const optionsContainer = document.getElementById('options');
            optionsContainer.innerHTML = '';
            
            q.options.forEach((option, index) => {
                const optionDiv = document.createElement('div');
                optionDiv.className = 'option';
                optionDiv.textContent = option;
                optionDiv.onclick = () => selectOption(index);
                optionsContainer.appendChild(optionDiv);
            });

            selectedAnswer = null;
            timeLeft = 10;
            startTimer();
        }

        function selectOption(index) {
            selectedAnswer = index;
            const options = document.querySelectorAll('.option');
            options.forEach((opt, i) => {
                opt.classList.toggle('selected', i === index);
            });
        }

        function startTimer() {
            clearInterval(timer);
            document.getElementById('timer').textContent = timeLeft;
            
            timer = setInterval(() => {
                timeLeft--;
                document.getElementById('timer').textContent = timeLeft;
                
                if (timeLeft <= 0) {
                    clearInterval(timer);
                    submitAnswer();
                }
            }, 1000);
        }

        function submitAnswer() {
            clearInterval(timer);
            
            if (selectedAnswer === questions[currentQuestion].correct) {
                score++;
            }
            
            currentQuestion++;
            
            setTimeout(() => {
                loadQuestion();
            }, 500);
        }

        function showValentineQuestion() {
            document.getElementById('quizScreen').classList.add('hidden');
            document.getElementById('valentineScreen').classList.remove('hidden');
        }

        function handleNo() {
            const wittyMsg = document.getElementById('wittyMessage');
            wittyMsg.textContent = wittyMessages[wittyMessageIndex];
            wittyMsg.classList.remove('hidden');
            
            wittyMessageIndex = (wittyMessageIndex + 1) % wittyMessages.length;
        }

        function handleYes() {
            document.getElementById('valentineScreen').classList.add('hidden');
            document.getElementById('successScreen').classList.remove('hidden');
        }
    </script>
</body>
</html>
